@model System.Collections.Generic.List<D.BankApp.Web.Models.AccountListModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row">
    <h3>Account Informations</h3>
    <div class="col-md-3">
        <p>
            Account Number : @ViewBag.Sender.AccountNumber
        </p>
    </div>
    <div class="col-md-3">
        <p>
            Account Balance : @ViewBag.Sender.Balance
        </p>
    </div>
    
</div>


    <form>
    
        <div class="row">
        
            <div class="col-md-3">
                <div>
                    <input type="text" name="SenderAccount" id="SenderAccount" hidden="hidden" value="@ViewBag.Sender.Id"/>
                </div>
                <div class="col-md-6">
                    <input type="number" class="form-control" id="Amount" name="Amount" placeholder="Amount">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="Selection" id="Selection">
                    <option selected>Select Account</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id" name="Selection" id="Selection">@item.AccountNumber</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-success" asp-controller="Account" asp-action="SendMoneyHandle">Send Money</button>
            </div>
        
        </div>
        
    </form>







<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th class="col-4">Account Number</th>
        <th class="col-4">Balance</th>
        <th class="col-2"></th>
        <th class="col-2"></th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
            
    @foreach (var item in Model)
    {<tr>
         <td>@item.AccountNumber</td>
         <td>@item.Balance</td>
         <td>
             <button></button>
         </td>
     </tr>
    }
    </tbody>
</table>




